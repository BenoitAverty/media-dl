version: '3.1'

networks:
  traefik-network:
    external: true

services:

  entrypoint:
    image: emilevauge/whoami
    networks:
      - traefik-network
    deploy:
      labels:
        - "traefik.docker.network=traefik-network"
        - "traefik.port=80"
        - "traefik.frontend.rule=Host:media-dl.ab0.fr"

  sonarr:
    image: linuxserver/sonarr
    networks:
      - traefik-network
    environment:
      PUID: 9000
      PGID: 9000
      TZ: Europe/Paris
    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      - "/var/swarm-data/config/media-dl/sonarr/:/config/"
      - "/var/download-data/TV:/tv"
      - "/var/download-data/work:/downloads"
    deploy:
      labels:
        - "traefik.docker.network=traefik-network"
        - "traefik.port=8989"
        - "traefik.frontend.rule=Host:media-dl.ab0.fr;PathPrefix:/sonarr"

  radarr:
    image: linuxserver/radarr
    networks:
      - traefik-network
    environment:
      PUID: 9000
      PGID: 9000
      TZ: Europe/Paris
    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      - "/var/swarm-data/config/media-dl/radarr/:/config/"
      - "/var/download-data/Movies:/movies"
      - "/var/download-data/work:/downloads"
    deploy:
      labels:
        - "traefik.docker.network=traefik-network"
        - "traefik.port=7878"
        - "traefik.frontend.rule=Host:media-dl.ab0.fr;PathPrefix:/radarr"

  t411-torznab:
    image: kilman/t411-torznab
    networks:
      - traefik-network
    environment:
      USERNAME: "{{ t411_username }}"
      PASSWORD: "{{ t411_password | safe }}"
      GID: 9000
      UID: 9000

  torrent:
    image: linuxserver/rutorrent
    networks:
      - traefik-network
    environment:
      PUID: 9000
      PGID: 9000
      TZ: Europe/Paris
    volumes:
      - "/var/swarm-data/config/media-dl/torrent/:/config/"
      - "/var/download-data/work/:/downloads/"
    ports:
      - "5000:5000"
      - "51413:51413"
      - "6881:6881/udp"
    deploy:
      labels:
        - "traefik.port=80"
        - "traefik.docker.network=traefik-network"
        - "traefik.frontend.rule=Host:media-dl.ab0.fr;PathPrefixStrip:/torrent"

  nzbget:
    image: linuxserver/nzbget
    networks:
      - traefik-network
    environment:
      PUID: 9000
      PGID: 9000
      TZ: Europe/Paris
    volumes:
      - "/etc/localtime:/etc/localtime:ro"
      - "/var/download-data/work/:/downloads/"
      - "/var/swarm-data/config/media-dl/nzbget/:/config/"
    deploy:
      labels:
        - "traefik.docker.network=traefik-network"
        - "traefik.port=6789"
        - "traefik.frontend.rule=Host:media-dl.ab0.fr;PathPrefixStrip:/nzbget/"
